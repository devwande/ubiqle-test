<section class="container newsletter-footer">
  <!-- Newsletter CTA Block -->
  <div class="newsletter-block">
    <div class="container">
      <div class="newsletter__content">
        <div class="newsletter__copy">
          <h3 class="newsletter__title">JOIN OUR KICKSPLUS CLUB & GET 15% OFF</h3>
          <p class="newsletter__subtitle">Sign up for free! Join the community.</p>
          <form method="post" action="/contact#newsletter" class="newsletter__form">
            <input type="hidden" name="form_type" value="customer" />
            <input type="email" name="email" placeholder="Email address" required class="newsletter__input" />
            <button class="btn btn--footer" type="submit">SUBMIT</button>
          </form>
        </div>
        <div class="newsletter__brand">
          <img src="{{ 'Kicks.svg' | asset_url }}" alt="Kicks Logo" width="" height="">
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Block -->
  <div class="footer-block">
    <div class="container">
      <div class="footer__content">
        <div class="footer__columns">
          <!-- About Us -->
          <div class="footer__column">
            <h4 class="footer__title">About us</h4>
            <p class="footer__description">We are the biggest hyperstore in the universe. We got you all cover with our exclusive collections and latest drops.</p>
          </div>

          <!-- Categories -->
          <div class="footer__column">
            <h4 class="footer__title">Categories</h4>
            <ul class="footer__links">
              <li><a href="#">Runners</a></li>
              <li><a href="#">Sneakers</a></li>
              <li><a href="#">Basketball</a></li>
              <li><a href="#">Outdoor</a></li>
              <li><a href="#">Golf</a></li>
              <li><a href="#">Hiking</a></li>
            </ul>
          </div>

          <!-- Company -->
          <div class="footer__column">
            <h4 class="footer__title">Company</h4>
            <ul class="footer__links">
              <li><a href="#">About</a></li>
              <li><a href="#">Contact</a></li>
              <li><a href="#">Blogs</a></li>
            </ul>
          </div>

          <!-- Follow Us -->
          <div class="footer__column">
            <h4 class="footer__title">Follow us</h4>
            <div class="footer__social">
              <img class="social-icon" src="{{ 'Facebook.svg' | asset_url }}" alt="Facebook Logo" width="" height="">
              <img class="social-icon" src="{{ 'Instagram.svg' | asset_url }}" alt="Instagram Logo" width="" height="">
              <img class="social-icon" src="{{ 'Twitter.svg' | asset_url }}" alt="Twitter Logo" width="" height="">
              <img class="social-icon" src="{{ 'Tiktok.svg' | asset_url }}" alt="Tiktok Logo" width="" height="">
            </div>
          </div>
        </div>

        <!-- Large Footer Logo -->
        <div class="footer__brand">
          <div class="footer-size">
            <img class="footer-logo" src="{{ 'KicksLogo.svg' | asset_url }}" alt="Kicks Logo" width="" height="">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Newsletter & Footer",
  "tag": "section",
  "class": "section-newsletter-footer",
  "settings": [
    {
      "type": "header",
      "content": "Newsletter Settings"
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter Title",
      "default": "JOIN OUR KICKSPLUS CLUB & GET 15% OFF"
    },
    {
      "type": "text",
      "id": "newsletter_subtitle",
      "label": "Newsletter Subtitle",
      "default": "Sign up for free! Join the community."
    },
    {
      "type": "text",
      "id": "submit_button",
      "label": "Submit Button Text",
      "default": "SUBMIT"
    }
  ],
  "presets": [
    {
      "name": "Newsletter & Footer",
      "settings": {
        "newsletter_title": "JOIN OUR KICKSPLUS CLUB & GET 15% OFF",
        "newsletter_subtitle": "Sign up for free! Join the community.",
        "submit_button": "SUBMIT"
      }
    }
  ]
}
{% endschema %}

