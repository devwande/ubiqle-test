<script>
// filepath: /Users/user/Developer/Ubiqle/sections/header-image.liquid
document.addEventListener('DOMContentLoaded', function() {
  const root = document.querySelector('.top-header');
  const nav = document.querySelector('.top-header__nav');
  if (!root || !nav) return;

  // Desktop
  const searchToggle = document.getElementById('searchToggle');
  const searchForm = document.getElementById('headerSearch');
  const searchInput = searchForm?.querySelector('.search-input');

  // Mobile
  const searchToggleMobile = document.getElementById('searchToggleMobile');
  const searchFormMobile = document.getElementById('headerSearchMobile');
  const searchInputMobile = searchFormMobile?.querySelector('.search-input');
  const menuToggleMobile = document.getElementById('menuToggleMobile');
  const mobileMenu = document.getElementById('mobileMenu');

  // Helper to close all
  function closeAll() {
    nav.classList.remove('is-search-open');
    root.classList.remove('is-search-open-mobile', 'is-menu-open-mobile');
    if (searchToggle) searchToggle.setAttribute('aria-expanded', 'false');
    if (searchForm) searchForm.setAttribute('aria-hidden', 'true');
    if (searchToggleMobile) searchToggleMobile.setAttribute('aria-expanded', 'false');
    if (searchFormMobile) searchFormMobile.setAttribute('aria-hidden', 'true');
    if (menuToggleMobile) menuToggleMobile.setAttribute('aria-expanded', 'false');
    if (mobileMenu) mobileMenu.setAttribute('aria-hidden', 'true');
  }

  // Desktop search
  if (searchToggle && searchForm) {
    searchToggle.addEventListener('click', function(e) {
      e.preventDefault();
      const isOpen = nav.classList.toggle('is-search-open');
      searchToggle.setAttribute('aria-expanded', isOpen);
      searchForm.setAttribute('aria-hidden', !isOpen);
      if (isOpen && searchInput) setTimeout(() => searchInput.focus(), 50);
    });
  }

  // Mobile search
  if (searchToggleMobile && searchFormMobile) {
    searchToggleMobile.addEventListener('click', function(e) {
      e.preventDefault();
      const isOpen = root.classList.toggle('is-search-open-mobile');
      searchToggleMobile.setAttribute('aria-expanded', isOpen);
      searchFormMobile.setAttribute('aria-hidden', !isOpen);
      if (isOpen && searchInputMobile) setTimeout(() => searchInputMobile.focus(), 50);
    });
  }

  // Mobile menu
  if (menuToggleMobile && mobileMenu) {
    menuToggleMobile.addEventListener('click', function(e) {
      e.preventDefault();
      const isOpen = root.classList.toggle('is-menu-open-mobile');
      menuToggleMobile.setAttribute('aria-expanded', isOpen);
      mobileMenu.setAttribute('aria-hidden', !isOpen);
    });
  }

  // Close on outside click
  document.addEventListener('click', function(e) {
    if (!nav.contains(e.target) && !root.contains(e.target)) {
      closeAll();
    }
  });

  // Close on Escape
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') closeAll();
  });

  // Reset on resize
  window.addEventListener('resize', function() {
    if (window.innerWidth > 768) {
      root.classList.remove('is-search-open-mobile', 'is-menu-open-mobile');
      if (searchToggleMobile) searchToggleMobile.setAttribute('aria-expanded', 'false');
      if (searchFormMobile) searchFormMobile.setAttribute('aria-hidden', 'true');
      if (menuToggleMobile) menuToggleMobile.setAttribute('aria-expanded', 'false');
      if (mobileMenu) mobileMenu.setAttribute('aria-hidden', 'true');
    } else {
      nav.classList.remove('is-search-open');
      if (searchToggle) searchToggle.setAttribute('aria-expanded', 'false');
      if (searchForm) searchForm.setAttribute('aria-hidden', 'true');
    }
  });
});
</script>
