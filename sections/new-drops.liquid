<section class="drops">
  <div class="container">
    <div class="new-drops__heading">
      <h2 class="section-title">DON'T MISS OUT<br/>NEW DROPS</h2>
      {% if section.settings.cta_link != blank %}
        <a class="btn new-drops__cta" href="{{ section.settings.cta_link }}">
          {{ section.settings.cta_label | default: 'SHOP NEW DROPS' }}
        </a>
      {% else %}
        <span class="btn new-drops__cta btn--disabled" role="button" aria-disabled="true">
          {{ section.settings.cta_label | default: 'SHOP NEW DROPS' }}
        </span>
      {% endif %}
    </div>

    <div class="drops__grid">
      {% for i in (1..4) %}
        <article class="card">
          <div class="card__img">
            <img src="https://picsum.photos/400/280?random={{ i }}" alt="Drop {{ i }}" width="400" height="280" loading="lazy" class="card__image"/>
          </div>
          <div class="card__body">
            <h3 class="card__title">Adidas 4DFWD x Parley Running Shoes</h3>
            <a class="btn btn--primary" href="#">View product â€” $125</a>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "New Drops",
  "tag": "section",
  "class": "section-new-drops",
  "settings": [
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "Button Text",
      "default": "SHOP NEW DROPS",
      "info": "Text displayed on the call-to-action button"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link",
      "info": "URL the button should link to"
    }
  ],
  "presets": [
    {
      "name": "New Drops",
      "settings": {
        "cta_label": "SHOP NEW DROPS"
      }
    }
  ]
}
{% endschema %}

