<section class="drops">
  <div class="container">
    <div class="new-drops__heading">
      <h2 class="section-title">DON'T MISS OUT<br/>NEW DROPS</h2>
      {% if section.settings.cta_link != blank %}
        <a class="btn new-drops__cta" href="{{ section.settings.cta_link }}">
          {{ section.settings.cta_label | default: 'SHOP NEW DROPS' }}
        </a>
      {% else %}
        <span class="btn new-drops__cta btn--disabled" role="button" aria-disabled="true">
          {{ section.settings.cta_label | default: 'SHOP NEW DROPS' }}
        </span>
      {% endif %}
    </div>

    <div class="drops__grid">
      <!-- Product 1: Blue gradient 4DFWD -->
      <article>
        <div class="card">
          <div class="card__badge">New</div>
          <div class="card__img">
            <img src="https://picsum.photos/400/400?random=4" alt="Adidas 4DFWD Blue Gradient" width="400" height="400" loading="lazy" class="card__image"/>
          </div>   
        </div>
        <div class="card__body">
            <h3 class="card__title">ADIDAS 4DFWD X PARLEY RUNNING SHOES</h3>
            <a class="btn btn--secondary" href="#">VIEW PRODUCT - <span class="price">$125</span></a>
        </div>
      </article>

      <!-- Product 2: White/Green/Orange Ultra Boost -->
      <article>
        <div class="card">
          <div class="card__badge">New</div>
          <div class="card__img">
            <img src="https://picsum.photos/400/400?random=1" alt="Adidas 4DFWD Blue Gradient" width="400" height="400" loading="lazy" class="card__image"/>
          </div>   
        </div>
        <div class="card__body">
            <h3 class="card__title">ADIDAS ULTRA BOOST 22 RUNNING SHOES</h3>
            <a class="btn btn--secondary" href="#">VIEW PRODUCT - <span class="price">$125</span></a>
        </div>
      </article>

      <!-- Product 3: Dark Green Lifestyle -->
      <article>
        <div class="card">
          <div class="card__badge">New</div>
          <div class="card__img">
            <img src="https://picsum.photos/400/400?random=2" alt="Adidas 4DFWD Blue Gradient" width="400" height="400" loading="lazy" class="card__image"/>
          </div>   
        </div>
        <div class="card__body">
            <h3 class="card__title">ADIDAS OZELIA LIFESTYLE SHOES</h3>
            <a class="btn btn--secondary" href="#">VIEW PRODUCT - <span class="price">$125</span></a>
        </div>
      </article>

      <!-- Product 4: Orange/Grey 4DFWD -->
      <article>
        <div class="card">
          <div class="card__badge">New</div>
          <div class="card__img">
            <img src="https://picsum.photos/400/400?random=3" alt="Adidas 4DFWD Blue Gradient" width="400" height="400" loading="lazy" class="card__image"/>
          </div>   
        </div>
        <div class="card__body">
            <h3 class="card__title">ADIDAS 4DFWD X PARLEY RUNNING SHOES</h3>
            <a class="btn btn--secondary" href="#">VIEW PRODUCT - <span class="price">$125</span></a>
        </div>
      </article>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "New Drops",
  "tag": "section",
  "class": "section-new-drops",
  "settings": [
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "Button Text",
      "default": "SHOP NEW DROPS",
      "info": "Text displayed on the call-to-action button"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link",
      "info": "URL the button should link to"
    }
  ],
  "presets": [
    {
      "name": "New Drops",
      "settings": {
        "cta_label": "SHOP NEW DROPS"
      }
    }
  ]
}
{% endschema %}

